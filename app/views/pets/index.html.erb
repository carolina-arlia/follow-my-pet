<div class="container">

  <div class="text-center mb-5">
    <h2>Hello, <span class="highlight-container p-2" style="color:white;"><span class="highlight"><%= current_user.name %>!</span></span></h2>
    <h5>These are your pets:</h5>
  </div>

  <div class="cards-patients justify-content-center">
    <% @pets.each do |pet| %>
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="card-patients" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path pet.photo.key, height: 300, crop: :fill %>')">
            <%= pet.name %>
          </div>
          <div class="card-content back">
            <div class="btn-pets">
              <%= link_to pet_path(pet), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "m-2" do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
              <%= link_to edit_pet_path(pet), class: "m-2" do %>
                <i class="fa-regular fa-pen-to-square"></i>
              <% end %>
            </div>
            <br>
            <span class="highlight-container p-2"><span class="highlight"><%= link_to "Profile", pet_path(pet), class: "btn-update", style: "font-size:18px;" %></span></span>
          </div>
        </div>
      </div>
    <% end %>
    <div class="flip-card">
      <div class="flip-card-inner">
        <div class="card-patients" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path "vet.png", height: 300, crop: :fill %>')">
          <i class="fa-solid fa-heart-circle-plus"></i>
        </div>
        <div class="card-content back">
          <p><strong>Welcome</strong> to the new pet!</p>
          <br>
          <span class="highlight-container p-2"><span class="highlight"><%= link_to "Add now", new_pet_path, class: "btn-update" %></span></span>
        </div>
      </div>
    </div>
  </div>

  </div>
      <% if current_user.type_of_user == "Pet Owner" %>
        <div class="card rounded-4 shadow ml-auto mb-5" style="width: 18rem; justify-self: center;">
          <div class= "bg-image hover-overlay ripple" data-mdb-ripple-color="light">
              <img class="card-img-top" src="<%= image_path("logo 4.webp") %>" alt="Card image cap" class= "img-fluid" style= "width: 18rem; height: 15rem; border-radius: 10px 10px 0 0;" >
            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
          </div>
          <div class="card-body d-flex justify-content-center">
            <%= link_to "New Pet", new_pet_path, class:"btn btn-secondary", style: "max-width: 100%" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>


</div>
