<div class="container mt-4 ml-auto">
  <% if current_user.type_of_user == "Veterinary" %>
    <h6><strong>Pet Owner:</strong> <%= @pet.user.name %></h6>
    <h6><strong>Phone:</strong> <%= @pet.user.phone %></h6>
    <h6><strong>Email:</strong> <%= @pet.user.email %></h6>
  <% end %>
  <h1><%= @pet.name %></h1>

  <div class="container d-flex">
    <div class="card" style="width: 18rem; margin-left: 15px;">
      <img src="<%= image_path("calendar.webp") %>" class="card-img-top" alt="perri" style="width: 256px; height: 250px;">
      <div class="card-body d-flex justify-content-center">
        <% if current_user.type_of_user == "Pet Owner" %>
          <p class="card-text"> <%= link_to "My Appointments", pet_appointments_path(@pet), class:"btn btn-secondary" %></p>
        <% else %>
          <p class="card-text"> <%= link_to "My Appointments", my_appointments_path, class:"btn btn-secondary" %></p>
        <% end %>
      </div>
    </div>

    <div class="card" style="width: 18rem; margin-left: 15px;">
      <img src="<%= image_path("maletin.webp") %>" class="card-img-top" alt="perri" style="width: 256px; height: 250px;">
      <div class="card-body d-flex justify-content-center">
        <p class="card-text"> <%=  link_to "Vaccination", pet_vaccinations_path(@pet), class:"btn btn-secondary" %></p>
      </div>
    </div>

    <div class="card" style="width: 18rem; margin-left: 15px;">
      <img src="<%= image_path("phile.webp") %>" class="card-img-top" alt="perri" style="width: 256px; height: 250px;">
      <div class="card-body d-flex justify-content-center">
        <p class="card-text"> <%= link_to "Clinical History", pet_clinical_histories_path(@pet), class:"btn btn-secondary" %></p>
      </div>
    </div>

    <% if current_user.type_of_user == "Pet Owner" %>
      <div class="card" style="width: 18rem; margin-left: 15px;">
        <img src="<%= image_path("pata.png") %>" class="card-img-top" alt="perri" style="width: 256px; height: 250px;">
        <div class="card-body d-flex justify-content-center">
          <p class="card-text"> <%= link_to "Veterinaries", pet_veterinaries_path(@pet), class:"btn btn-secondary" %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
