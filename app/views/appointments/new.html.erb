<div class="container">
  <h1>New appointment </h1>
</div>

<div class="container-my-reservations">
  <div class="cards-container">
      <div class="container-show-header">
        <div class="botton-show">
          <%= link_to "Back", pet_veterinary(@pet), class: "btn btn-primary" %>
        </div>
      </div>
  </div>

  <div class="container mt-4">
    <div class="row">
      <div class="col-6 m-auto">
        <div class="flat-form form-container">
            <h1> <%= @appointment.user.name %></h1>
            <div class="mt-3">
                <%= simple_form_for @appointment do |r| %>
                <%= r.input :start_datetime, as: :date, html5: true %>
                <%= r.input :end_datetime, as: :date, html5: true %>
                <%= r.button :submit, class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
