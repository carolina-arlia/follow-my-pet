<div class="container">

<div class="mt-4 mb-4">
  <h1>Edit the Clinical History</h1>
</div>

<div class="form p-4 bg-white rounded-4">
    <%= simple_form_for([@pet, @clinical_history]) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :date, as: :date %>
      <%= f.input :type_of_history, as: :radio_buttons,
    collection: [
      "Consult",
      "Vaccination", "Study"] %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
</div>

</div>
